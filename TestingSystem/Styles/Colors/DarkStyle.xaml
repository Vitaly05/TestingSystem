<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="MainBrush" Color="Black" />
    <Color x:Key="MainColor">Black</Color>

    <SolidColorBrush x:Key="BorderBrush" Color="White" />
    <Color x:Key="BorderColor">White</Color>

    <SolidColorBrush x:Key="SecondBrush" Color="#2E2E2E" />
    <Color x:Key="SecondColor">#2E2E2E</Color>

    <SolidColorBrush x:Key="SelectedItemBrush">Silver</SolidColorBrush>
    <Color x:Key="SelectedItemColor">Silver</Color>

    <SolidColorBrush x:Key="ContentBrush" Color="White" />
    <Color x:Key="ContentColor">White</Color>

    <SolidColorBrush x:Key="ErrorBrush" Color="Red" />
    <Color x:Key="ErrorColor">Red</Color>

    <SolidColorBrush x:Key="DisabledBrush" Color="#404040"/>
    <Color x:Key="DisabledColor">#404040</Color>

</ResourceDictionary>