<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="MainBrush" Color="White" />
    <Color x:Key="MainColor">White</Color>

    <SolidColorBrush x:Key="BorderBrush" Color="Black" />
    <Color x:Key="BorderColor">Black</Color>

    <SolidColorBrush x:Key="SecondBrush" Color="LightGray" />
    <Color x:Key="SecondColor">LightGray</Color>

    <SolidColorBrush x:Key="SelectedItemBrush">DimGray</SolidColorBrush>
    <Color x:Key="SelectedItemColor">DimGray</Color>

    <SolidColorBrush x:Key="ContentBrush" Color="Black" />
    <Color x:Key="ContentColor">Black</Color>
    
    <SolidColorBrush x:Key="ErrorBrush" Color="Red" />
    <Color x:Key="ErrorColor">Red</Color>

    <SolidColorBrush x:Key="DisabledBrush" Color="LightGray"/>
    <Color x:Key="DisabledColor">LightGray</Color>

</ResourceDictionary>