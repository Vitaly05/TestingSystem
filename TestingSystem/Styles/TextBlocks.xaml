<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="H1TextBlock" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{DynamicResource H1}" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{DynamicResource ContentBrush}" />
    </Style>

    <Style TargetType="TextBlock">
        <Setter Property="FontSize" Value="{DynamicResource Regular}" />
        <Setter Property="Foreground" Value="{DynamicResource ContentBrush}" />
    </Style>

    <Style x:Key="BigTextBlock" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{DynamicResource Big}" />
        <Setter Property="Foreground" Value="{DynamicResource ContentBrush}" />
    </Style>

</ResourceDictionary>